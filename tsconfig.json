{
  "compilerOptions": {
    "target": "ES2020", // Dùng ES2020 cho các feature mới
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false, // Nếu toàn TypeScript, tắt JS
    "skipLibCheck": true, // Bỏ qua type check của node_modules để nhanh
    "strict": true, // Bật strict mode
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noEmit": true, // Next.js không cần emit tsc
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Chuẩn Next.js 14+
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // JSX sẽ do Babel Next.js xử lý
    "incremental": true,
    "baseUrl": ".", // Cho alias paths hoạt động
    "paths": {
      "@/*": [
        "src/*"
      ] // Alias '@/...' -> './src/...'
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src",
    "src/types",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
